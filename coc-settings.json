{
    "coc.preferences.extensionUpdateCheck": "weekly",

    "suggest.autoTrigger": "none",
    "suggest.noselect": false,
    "suggest.maxPreviewWidth": 100,

    "codeLens.enable": true,

    "diagnostic.enableMessage": "jump",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.maxWindowHeight": 20,
    "diagnostic.warningSign": "⚠",
    "diagnostic.errorSign": "✖",
    "diagnostic.infoSign": "●",
    "diagnostic.hintSign": "○",
    "diagnostic.refreshOnInsertMode": true,

    "pairs.enableCharacters": [
	    "(",
	    "[",
	    "{",
	    "'",
	    "\""
    ],
    "java.trace.server": "verbose",
    "java.home": "/usr/lib/jvm/java-17-openjdk",
    "coc.preferences.rootPatterns": ["src/"],

    /* "java.project.referencedLibraries": [ */
    /* 	"~/FAU/faecher/4.semester/Rechnerkommunikation/aufgaben/aufgabe5/NWEmu.jar" */
    /* ], */
    "python.analysis.diagnosticMode": "workspace",
    "python.linting.mypyEnabled": true,
    "python.pythonPath": "/usr/bin/python3.9",

    "typescript.suggest.completeFunctionCalls": false,

    "markdownlint.config": {
    	"line_length": false
    },

    "languageserver": {
	"bash": {
      	  "command": "bash-language-server",
      	  "args": ["start"],
      	  "filetypes": ["sh", "bash", "zsh"],
      	  "ignoredRootPaths": ["~"]
    	}
    },
    "explorer.keyMappings.global": {
	"<c-v>": "open:vsplit",
	"<c-x>": "open:split",

	"yp": "copyFilepath",
	"yy": "copyFile",
	"dd": "cutFile",
	"p":  "pasteFile",
	"dF": "deleteForver",

	"a": "addFile",
	"A":  "addDirectory",
	"r":  "rename",

	"?": "help"
    },
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.0/clangd_14.0.0/bin/clangd"
}
